<div class="home-container">
<div class="form-container">
<h1>Editing space</h1>
<%= render "form", space: @space %>
<%= button_to "Destroy this space", @space, method: :delete %>

<br>

<div>
  <%= link_to "Back to my personal car space listings", spaces_path %>
</div>
</div>

<div class="py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
        <div class="bg-white p-4 p-md-5 rounded shadow-sm">
          <div class="row">
            <div class="col-12">
              <div class="mb-5">
                <h3>Editing space</h3> <!-- Bootstrapのタイトルに変更 -->
              </div>
            </div>
          </div>
          <%= render "form", space: @space %>
          <div>
            <%= link_to "Show this space", @space %> |
            <%= link_to "Back to spaces", spaces_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
