<div class="container">
  <h3 class="home-intro">Check out all of our current car spot listings</h3>
    <div class="row row-cols-1 row-cols-md-2 g-4 m-2 justify-content-center">
        <%= form_tag spaces_path, method: :get, class:"d-flex my-3" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a spot"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
  </div>
</div>
  <div class="slider-group-index">
    <% @spaces.each do |space| %>
      <div class="card">
        <%= space.image_url.nil? ? cl_image_tag(space.photo.key) : (image_tag space.image_url, class: "card-img-top", alt: "Car Spot Image") %>
        <div class="card-body">
          <div>
            <h6 class="card-title">
              <%= space.name %>
            </h6>

            <h6 class="card-text">
              <%= space.location %>
            </h6>

            <br>
            <div class="d-flex justify-content-between">
              <h6 class="card-subtitle mb-2 text-muted">
                $<%= space.price %>
              </h6>
              <%= link_to "More details", space, class: "card-link" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
