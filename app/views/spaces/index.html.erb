<% @spaces = Space.where(user_id: current_user) %>
  <% if @spaces.any? %>
      <div class="container">
       <h1>Manage your personal car spaces ğŸš— </h1>
        <div class="row row-cols-1 row-cols-md-2 g-4 m-2 justify-content-center">
          <% @spaces.each do |space| %>
            <div class="card m-4 bg-white box-shadow border-0"
            style="width: 23rem,
            background-image: url('https://cdn.pixabay.com/photo/2014/07/31/00/30/vw-beetle-405876_1280.jpg')">
              <div class="card-body">
              <%= render space %>
              <p>
                <%= link_to "Show this space", space %>
              </p>
            </div>
          </div>
          <% end %>
        </div>
     <% else %>
      <span class="dropdown-item-text">You currently don't have any car spaces listed. Do you want to create a new listing?</span>
      <%= link_to "Create a new listing", new_space_path %>
      <% end %>
  </div>
