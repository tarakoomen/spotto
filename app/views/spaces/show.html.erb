<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="d-flex h-100">
        <div class="card m-4 bg-white box-shadow border-1 flex-grow-1" style="width: 23rem;">
          <%= image_tag @space.image_url, class: "card-img-top", alt: "Space Image" %>
          <div class="card-body">
            <h5 class="card-title"><%= @space.name %></h5>
            <h6 class="card-text"><%= @space.location %></h6>
            <h6 class="card-text"><%= @space.description %></h6>
            <div class="d-flex justify-content-between">
              <h6 class="card-subtitle mb-2 text-muted">$<%= @space.price %></h6>
              <div>
<%= link_to "Book this space", new_space_booking_path(@space), class: "card-link", data: { bs_toggle: "modal", bs_target: "#bookingModal" } %>

<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookingModalLabel">Enter in your dates</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-primary">
        <h1>New Booking</h1>
        <div class="container">
          <p>Enter in your dates</p>
           <%= render "bookings/form", space: @space, booking: @booking %>
        </div>      </div>
    </div>
  </div>
</div>


              </div>
              <div>
                <%= link_to "Back to all parking spaces", spaces_path, class:"card-link" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="d-flex h-100">
        <div class="card m-4 bg-white box-shadow border-1 flex-grow-1" style="width: 23rem; margin-left: -15px; padding-bottom: 0;">
          <%= image_tag asset_path('map1.jpg'), class: "card-img-top img-fluid", alt: "Map Image", style: "object-fit: cover; width: 100%; height: 100%;" %>
        </div>
      </div>
    </div>
  </div>
</div>
