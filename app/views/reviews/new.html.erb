<div class="container">
  <h1>Leave a review</h1>

  <%= link_to "View all spaces", spaces_path(@space), class: "btn btn-flat" %>

  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
      <h3>Leave feedback about this space</h3>
        <%= simple_form_for([@booking, @review]) do |f| %>
        <div class="form-inputs">
          <%= f.input :content, as: :text %>
          <%= f.input :rating, as: :integer, placeholder: "Give a rating between 1 and 5", input_html: { min: 0, max: 5, step: 1 } %>
          <%= f.hidden_field :booking_id, value: @booking.id %>
        </div>
      <div class="form-actions">
        <%= f.submit class: 'btn btn-flat' %>
      </div>
    <% end %>
    </div>
  </div>
  </div>
</div>
