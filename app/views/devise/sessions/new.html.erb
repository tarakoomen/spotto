<div class="main-container">
<div class="back-ground">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
data: { turbo: false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


<div class="py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
        <div class="bg-white p-4 p-md-5 rounded shadow-sm">
          <div class="row">
            <div class="col-12">
              <div class="mb-5">
                <h2>Log in</h2> <!-- Bootstrapのタイトルに変更 -->
              </div>
            </div>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                              data: { turbo: false }) do |f| %>
            <div class="form-inputs row gy-3 gy-md-4 overflow-hidden">
              <div class="col-12">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-control", id: "email" } %>
              </div>
              <div class="col-12">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "form-control", id: "password" } %>
              </div>
              <div class="col-12">
                <div class="form-check">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
              <div class="col-12">
                <div class="d-grid">
                  <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
</div>
