<div class="main-container">
  <div class="container">
    <h3>Booking details</h3>
    <div class="slider-container">
      <div class="slider-group">
        <div class="card">
          <div class="content-img">
            <%= image_tag @booking.space.image_url, class: "card-img-top", alt: "Booking Image" %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= @booking.space.name %>
            </h5>
            <h6 class="card-text">
              <%= @booking.space.location %>
            </h6>
            <h4 class="card-text">
              Start date:
              <%= @booking.start %>
            </h4>
            <h4 class="card-text">
              End date:
              <%= @booking.end %>
            </h4>
            <h6 class="card-text">
              <%= @booking.space.description %>
            </h6>
            <h6 class="card-text">
              $<%= @booking.space.price %>
            </h6>
            <div class="no-style-links">
              <p class="no-style-links"><%= link_to "Edit this booking", edit_booking_path(@booking)%></p>
              <p><%= link_to "Cancel this booking", booking_path(@booking),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "text-danger"%></p>
              <p><%= link_to "Back to My Bookings", bookings_path %></p>
              <p><%= link_to "Write a review", new_booking_review_path(@booking) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="container">
        <div class="d-flex h-100">
          <div class="card m-4 bg-white box-shadow border-1 flex-grow-1" style="width: 100%; padding-bottom: 0;">
            <%= image_tag asset_path('map8.jpg'), class: "card-img-top img-fluid", alt: "Map Image", style: "object-fit: contain; width: 100%; height: 100%;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= image_tag("sneaky.png", class: "sneaky-image", alt: "Sneaky Image") %>
