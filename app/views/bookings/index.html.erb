<div class="container">
<h1>Your upcoming bookings</h1>
  <div>
    <%= link_to "Need another space?", spaces_path %>
  </div>
    <div class="slider-container">
      <div class="slider-group">
        <% @bookings.each do |booking| %>
          <div class="card">
            <div class="content-img">
              <img src="https://cdn.pixabay.com/photo/2014/07/31/00/30/vw-beetle-405876_1280.jpg" class="card-img-top" alt="...">
            </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= booking.space.name %>
                </h5>
                <h6 class="card-text">
                  <%= booking.space.location %>
                </h6>
                <h6 class="card-text">
                  Start date:
                  <%= booking.start %>
                </h6>
                <h6 class="card-text">
                  End date:
                  <%= booking.end %>
                </h6>
                  <div class="card-button">
                  <%= link_to "More booking details", booking %>
                  </div>
              </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
